<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/OpenPrimaryBackground">

        <!--动画全屏效果-->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/junk_lottie"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/header_layout"
            layout="@layout/open_include_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/junk_size_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="000"
            android:textColor="?attr/colorPrimary"
            android:textSize="67dp"
            app:layout_constraintVertical_bias="0.3906"
            app:layout_constraintEnd_toEndOf="@id/junk_lottie"
            app:layout_constraintStart_toStartOf="@id/junk_lottie"
            app:layout_constraintTop_toTopOf="@id/junk_lottie"
            app:layout_constraintBottom_toBottomOf="@id/junk_lottie"/>

        <TextView
            android:id="@+id/junk_unit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:text="000"
            android:textColor="?attr/colorPrimary"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="@id/junk_lottie"
            app:layout_constraintStart_toStartOf="@id/junk_lottie"
            app:layout_constraintTop_toBottomOf="@id/junk_size_tv" />

        <FrameLayout
            android:id="@+id/task_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.mckj.sceneslib.ui.LSNTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>


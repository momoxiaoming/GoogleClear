<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/img_font_bg"
        android:elevation="5dp"
        android:paddingVertical="15dp"
        android:paddingHorizontal="17dp"
        android:layout_height="wrap_content"
      >

        <TextView
            android:id="@+id/font_scale_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前系统使用字号（100%）"
            android:textColor="#ff333333"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/font_scale_hint"
            android:layout_marginTop="14dp"
            android:text="效果："
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/font_scale_title" />


        <TextView
            android:id="@+id/font_scale_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中文 Aa 123"
            android:textStyle="bold"
            android:textColor="#ff14b4ff"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/font_scale_hint"
            app:layout_constraintTop_toBottomOf="@+id/font_scale_hint" />


        <TextView
            android:id="@+id/font_scale_do"
            android:background="@drawable/shape_font_scale_item_bt"
            android:text="应用"
            android:textColor="#333333"
            android:textSize="16sp"
            android:paddingHorizontal="18dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
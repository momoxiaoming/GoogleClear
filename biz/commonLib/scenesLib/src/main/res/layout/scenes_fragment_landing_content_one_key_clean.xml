<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/landing_header_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/OpenPrimaryBackground">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/landing_header_lottie"
            android:layout_width="0dp"
            android:layout_height="300dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/landing_header_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="144dp"
            android:singleLine="true"
            android:text="手机提速"
            android:textColor="#F2F9FF"
            android:textSize="29sp"
            app:layout_constraintEnd_toEndOf="@+id/landing_header_lottie"
            app:layout_constraintStart_toStartOf="@+id/landing_header_lottie"
            app:layout_constraintTop_toTopOf="@+id/landing_header_lottie"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/landing_header_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="20%"
            android:textColor="#F2F9FF"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/landing_header_lottie"
            app:layout_constraintStart_toStartOf="@+id/landing_header_lottie"
            app:layout_constraintTop_toBottomOf="@id/landing_header_name_tv" />

        <TextView
            android:id="@id/landing_content_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:text="微信中还有xxxMB\n深层聊天垃圾待清理"
            android:textColor="#F2F9FF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/landing_header_lottie" />

        <TextView
            android:id="@+id/landing_content_btn"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginHorizontal="73dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/scenes_bg_landing_btn_gray"
            android:gravity="center"
            android:text="微信专清"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/landing_content_desc_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shadow_hw"
        android:layout_marginBottom="2dp">

        <ImageView
            android:id="@+id/item_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="18dp"
            android:contentDescription="@null"
            android:src="@drawable/scenes_icon_finish_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="14dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:singleLine="true"
            android:text="手机降温"
            android:textColor="#262626"
            android:textSize="19sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/item_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/item_iv"
            app:layout_constraintTop_toTopOf="@id/item_iv"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@id/item_desc_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:singleLine="false"
            android:text="当前手机温度过高"
            android:textColor="#333333"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/item_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_iv"
            app:layout_constraintTop_toTopOf="@+id/item_iv" />

        <Button
            android:id="@+id/item_btn"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/scenes_bg_landing_btn"
            android:text="立即降温"
            android:textColor="#F2F9FF"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_desc_tv"
            tools:background="#3198F4" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

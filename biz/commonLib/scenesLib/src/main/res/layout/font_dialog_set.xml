<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#66000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            god_normal_radiusLT="@{13}"
            god_normal_radiusRT="@{13}"
            god_normal_solidColor="@{@color/white}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="375dp">

            <TextView
                android:id="@+id/scenes_textview8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_marginTop="25dp"
                android:text="自定义字号"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/fontSetClose"
                android:layout_marginEnd="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_font_close"
                app:layout_constraintBottom_toBottomOf="@+id/scenes_textview8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/scenes_textview8" />

            <TextView
                android:id="@+id/scenes_textview9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="拖动下方滑块可预览文字大小"
                android:textColor="#999999"
                android:textSize="17dp"
                app:layout_constraintStart_toStartOf="@+id/scenes_textview8"
                app:layout_constraintTop_toBottomOf="@+id/scenes_textview8" />

            <SeekBar
                android:id="@+id/fontScaleSeekbar"
                android:layout_marginTop="35dp"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16.5dp"
                android:layout_height="wrap_content"
                android:splitTrack="false"
                android:max="110"
                android:progressDrawable="@drawable/bg_font_progress"
                android:thumb="@drawable/ic_font_sliding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scenes_textview9" />

            <TextView
                android:id="@+id/fontSetValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:layout_marginBottom="60dp"
                android:text="中文 Aa 40%"
                android:textStyle="bold"
                android:textColor="#14b4ff"
                android:textSize="13sp"
                app:layout_constraintBottom_toTopOf="@+id/fontSetSure"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
              />


            <TextView
                android:id="@+id/fontSetSure"
                god_normal_radius="@{5}"
                god_normal_solidColor="@{@color/font_theme_color}"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginBottom="60dp"
                android:gravity="center"
                android:paddingHorizontal="56dp"
                android:text="使用该字号"
                android:textColor="#ffffffff"
                android:textSize="17dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
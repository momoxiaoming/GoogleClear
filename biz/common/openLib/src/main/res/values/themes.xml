<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OpenBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--基本属性-->
        <item name="android:textAllCaps">false</item>
        <item name="android:windowBackground">@color/OpenBackground</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>

        <item name="toolbarStyle">@style/AppToolbar</item>
        <item name="android:buttonStyle">@style/AppButton</item>

        <!--自定义属性定制-->
        <item name="colorPrimary">@color/OpenPurple_500</item>
        <item name="colorPrimaryDark">@color/OpenPurple_700</item>
        <item name="colorAccent">@color/OpenPurple_200</item>
        <item name="divider">@color/OpenDivider</item>

        <item name="OpenPrimaryBackground">@drawable/open_bg_primary</item>
        <item name="OpenPrimaryBtn">@drawable/open_btn_primary</item>
        <item name="OpenAppIcon">@drawable/open_icon_launcher</item>
        <item name="OpenAppName">@string/app_name</item>
        <item name="OpenSelectorWhiteBtn">@drawable/open_selector_white_btn</item>

        <item name="homeAsUpIndicator">@drawable/open_icon_back_white</item>
        <item name="selectableItemBackground">@drawable/bg_item_selector</item>
        <item name="navigationIcon">@drawable/open_icon_back_white</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>

<!--        <item name="android:windowAnimationStyle">@style/ApiActivityAnim</item>-->
    </style>

    <style name="OpenBaseThemeDialog" parent="Theme.AppCompat.Light.Dialog">
        <!--基本属性-->
        <item name="android:textAllCaps">false</item>
        <item name="android:windowBackground">@color/OpenBackground</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="toolbarStyle">@style/AppToolbar</item>
        <item name="android:buttonStyle">@style/AppButton</item>

        <!--自定义属性定制-->
        <item name="colorPrimary">@color/OpenPurple_500</item>
        <item name="colorPrimaryDark">@color/OpenPurple_700</item>
        <item name="colorAccent">@color/OpenPurple_200</item>
        <item name="divider">@color/OpenDivider</item>

        <item name="OpenPrimaryBackground">@drawable/open_bg_primary</item>
        <item name="OpenPrimaryBtn">@drawable/open_btn_primary</item>
        <item name="OpenAppIcon">@drawable/open_icon_launcher</item>
        <item name="OpenAppName">@string/app_name</item>
        <item name="OpenSelectorWhiteBtn">@drawable/open_selector_white_btn</item>

        <item name="homeAsUpIndicator">@drawable/open_icon_back_white</item>
        <item name="selectableItemBackground">@drawable/open_selector_white_btn</item>
        <item name="navigationIcon">@drawable/open_icon_back_white</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <!--供外部自定义属性-->
    <style name="OpenBaseTheme.Stub" />

    <style name="OpenBaseThemeDialog.Stub" />

    <!--供外部调用-->
    <!--普通Activity样式-->
    <style name="OpenTheme" parent="OpenBaseTheme.Stub" />

    <style name="OpenTheme.TransParent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--普通Dialog样式-->
    <style name="OpenThemeDialog" parent="OpenBaseThemeDialog.Stub" />

    <style name="OpenThemeDialog.TransParent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--全屏Dialog样式-->
    <style name="OpenThemeDialog.Full" >
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.mckj.module.wifi.entity.ConnectingEntity" />

        <import type="android.view.View" />

        <variable
            name="entity"
            type="ConnectingEntity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/item_connecting_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{entity.name + "..."}'
            android:textColor="@{entity.state == ConnectingEntity.STATE_LOADING ? @color/OpenColorText : @color/OpenColorTextHint}"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/item_connecting_state_layout"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:visibility="@{entity.state == ConnectingEntity.STATE_NORMAL ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/item_connecting_name_tv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/item_connecting_state_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:src="@drawable/wifi_icon_right_black"
                android:visibility="@{entity.state == ConnectingEntity.STATE_RIGHT ? View.VISIBLE : View.GONE}" />

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminateDrawable="@drawable/wifi_anim_loading_black"
                android:visibility="@{entity.state == ConnectingEntity.STATE_LOADING ? View.VISIBLE : View.GONE}" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
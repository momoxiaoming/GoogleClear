<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="info"
            type="com.mckj.sceneslib.manager.network.WifiInfo" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/menu_title_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/menu_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:ellipsize="middle"
                android:text="@{info.ssid}"
                android:textColor="@color/OpenColorTextBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/menu_state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{info.connect ? "已连接" : "未连接"}'
                android:textColor="@{info.connect ? @color/WifiColorInfoConnectedText : @color/OpenColorTextHint}"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/menu_state_iv"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="8dp"
                android:contentDescription="@null"
                android:src="@{info.connect ? @drawable/wifi_icon_connected : @drawable/wifi_icon_unconnect}" />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/menu_recycler"
            android:layout_width="match_parent"
            android:layout_height="174dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/menu_title_layout" />

        <Button
            android:id="@+id/menu_cancel_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/base_text_black"
            android:textSize="17dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/menu_recycler" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/item_wifi_info_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none" />

        <LinearLayout
            android:id="@+id/item_wifi_info_more_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/item_wifi_info_recycler"
            android:layout_marginTop="-60dp"
            android:background="@drawable/wifi_shape_wifi_info_more"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_wifi_info_more_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="收起Wifi"
                android:gravity="center"
                android:textColor="@color/wifi_text_green"
                android:textSize="14sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"/>

            <ImageView
                android:id="@+id/item_wifi_info_more_iv"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:contentDescription="@null"
                android:src="@drawable/wifi_arrow_down_green" />

        </LinearLayout>

    </RelativeLayout>

</layout>


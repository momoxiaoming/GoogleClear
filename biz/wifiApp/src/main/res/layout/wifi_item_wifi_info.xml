<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="wifiInfo"
            type="com.mckj.sceneslib.manager.network.WifiInfo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?attr/selectableItemBackground"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp">

        <ImageView
            android:id="@+id/item_wifi_info_iv"
            android:layout_width="33dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:contentDescription="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_wifi_info_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="@{wifiInfo.ssid}"
            android:textColor="@color/OpenColorTextBlack"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/item_wifi_info_desc_tv"
            app:layout_constraintLeft_toRightOf="@id/item_wifi_info_iv"
            app:layout_constraintRight_toLeftOf="@+id/item_wifi_info_more_iv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/item_wifi_info_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="2dp"
            android:text='@{wifiInfo.connect ? "已连接" : "可直接连接"}'
            android:textColor="@{wifiInfo.connect ? @color/WifiColorInfoConnectedText : @color/WifiColorInfoDirectConnectText}"
            android:textSize="12sp"
            android:visibility="@{wifiInfo.exists ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/item_wifi_info_name_tv"
            app:layout_constraintTop_toBottomOf="@id/item_wifi_info_name_tv" />

        <ImageView
            android:id="@+id/item_wifi_info_desc_iv"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:contentDescription="@null"
            android:src="@drawable/wifi_icon_connected"
            android:visibility="@{wifiInfo.connect ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/item_wifi_info_desc_tv"
            app:layout_constraintLeft_toRightOf="@id/item_wifi_info_desc_tv"
            app:layout_constraintTop_toTopOf="@id/item_wifi_info_desc_tv" />

        <ImageView
            android:id="@id/item_wifi_info_more_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:padding="12dp"
            android:src="@drawable/wifi_icon_more"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:background="@color/WifiDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/item_wifi_info_name_tv"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>



<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="fragment"
            type="com.mckj.module.wifi.ui.dialog.InputPasswordDialogFragment" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/input_password_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text='@{"连接"+fragment.mWifiInfo.ssid}'
            android:singleLine="true"
            android:ellipsize="middle"
            android:textColor="@color/WifiColorGreen"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/input_password_name_et"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:hint="输入密码"
            android:inputType="textPassword"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="#333333"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_password_name_tv" />

        <ImageView
            android:id="@+id/input_password_show_iv"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:contentDescription="@null"
            android:src="@drawable/wifi_icon_input_invisible"
            app:layout_constraintBottom_toBottomOf="@id/input_password_name_et"
            app:layout_constraintRight_toRightOf="@id/input_password_name_et"
            app:layout_constraintTop_toTopOf="@id/input_password_name_et" />

        <TextView
            android:id="@+id/input_password_tip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="密码错误,连接失败"
            android:textColor="#FE4538"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@id/input_password_name_et"
            app:layout_constraintTop_toBottomOf="@id/input_password_name_et" />

        <include
            android:id="@+id/input_password_divider_1"
            layout="@layout/wifi_include_divider_vertical"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="17dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_password_tip_tv" />

        <include
            android:id="@+id/input_password_divider_2"
            layout="@layout/wifi_include_divider_horizontal"
            android:layout_width="1px"
            android:layout_height="48dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_password_divider_1" />

        <Button
            android:id="@+id/input_password_cancel_tv"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@null"
            android:clickable="true"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/base_text"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@id/input_password_divider_2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/input_password_divider_2"
            app:layout_constraintTop_toTopOf="@id/input_password_divider_2" />

        <Button
            android:id="@+id/input_password_confirm_tv"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@null"
            android:clickable="true"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/base_text_black"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@id/input_password_divider_2"
            app:layout_constraintLeft_toRightOf="@id/input_password_divider_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/input_password_divider_2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
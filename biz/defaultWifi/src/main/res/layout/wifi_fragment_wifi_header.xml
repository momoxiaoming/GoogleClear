<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/OpenPrimaryBackground">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:contentDescription="@null"
            android:src="@drawable/wifi_bg_home_header_decorate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/content"
            android:layout_width="164dp"
            android:layout_height="164dp"
            android:background="@drawable/wifi_bg_home_content"
            android:contentDescription="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/content_network_mask_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/content"
            app:layout_constraintEnd_toEndOf="@id/content"
            app:layout_constraintStart_toStartOf="@id/content"
            app:layout_constraintTop_toTopOf="@id/content">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/content_network_mask_lottie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:lottie_fileName="lottieFiles/wifiMask/data.json"
                app:lottie_imageAssetsFolder="lottieFiles/wifiMask"
                app:lottie_loop="true"
                app:lottie_repeatMode="restart" />

            <ImageView
                android:id="@+id/content_network_mask_iv"
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="21dp"
                android:contentDescription="@null" />
        </FrameLayout>

        <TextView
            android:id="@+id/content_network_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="desc"
            android:textColor="?attr/colorPrimary"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/content_network_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:ellipsize="middle"
            android:gravity="center"
            android:singleLine="true"
            android:text="name"
            android:textColor="?attr/colorPrimary"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/content_network_desc_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/smart_btn"
            android:layout_width="173dp"
            android:layout_height="48dp"
            android:background="@drawable/wifi_btn_round_while"
            android:stateListAnimator="@null"
            android:text="一键加速"
            android:textColor="?attr/colorPrimary"
            android:textSize="23dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/content" />

        <include
            android:id="@+id/title_layout"
            layout="@layout/open_include_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/title_switch_layout"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:background="@drawable/wifi_bg_header_switch"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/title_layout"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:layout_width="13dp"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/wifi_icon_header_switch" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:singleLine="true"
                android:text="切换WiFi"
                android:textColor="@color/open_text"
                android:textSize="14dp" />

        </LinearLayout>

        <com.mckj.sceneslib.ui.LSNTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textColor="#60ffffff"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

